package ex03.BMI;

public class map {
	String name;
	double weight;
	double height;
	double bmi_score;
	String bmi_result;

	// getter, setter
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public double getWeight() {
		return weight;
	}
	public void setWeight(double weight) {
		this.weight = weight;
	}
	public double getHeight() {
		return height;
	}
	public void setHeight(double height) {
		this.height = height;
	}
	public double getBmi() {
		return bmi_score;
	}
	public void setBmi(double bmi) {
		this.bmi_score = weight / ((height / 100.0) * (height/100.0));

	}
	
	// 생성자
	
	public map() {}
	
	public map(String name, double weight, double height) {
		super();
		this.name = name;
		this.weight = weight;
		this.height = height;
	}
	@Override
	public String toString() {
		return "BMI [name=" + name + ", weight=" + weight + ", height=" + height + ", bmi=" + bmi_score + ", bmi_result="
				+ bmi_result + "]";
	}
	public String result() {
		this.bmi_score = weight / ((height / 100.0) * (height/100.0));
		if (bmi_score < 18.5)	bmi_result = "체중부족";
		else if (bmi_score <= 22.9)	bmi_result = "정상";
		else if (bmi_score <= 24.9)	bmi_result = "과체중";
		else	bmi_result = "비만";
		return bmi_result;
	}

	
	

	
	
	


}
